{% extends "base.twig" %}

{% block content %}
	<div class="page__main
	[&>div+div]:mt-20 md:[&>div+div]:mt-[100px]
	[&>.article-grid]:px-5
	[&>.overlay-wide-image]:px-5
	[&>.media-aside]:px-5
	[&>.media-context]:px-5
	[&>.list-context]:px-5
	[&>.image-grid]:px-5
  [&>.pagination]:px-5">

    {% set mappedPosts = posts|sort((a, b) => date(a.event_date) <=> date(b.event_date))|map(p => {
      post: p,
    }) %}

    {% include 'context-section.twig' with {
      hero: true,
      size: 'large',
      heading: 'Event Calendar',
      align: 'center',
    } %}
    {% include 'section-nav.twig' with {
      menu: 'Events Menu',
    } %}
    {% include 'article-grid.twig' with {
      render_posts: false,
      render_api: false,
      columns: 3,
      image_orientation: 'rectangle',
      items: mappedPosts,
    } %}
	</div>
{% endblock %}
