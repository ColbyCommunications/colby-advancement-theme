{% if in_component_library %}
  {% set context = '@context' %}
{% else %}
  {% set context = 'context.twig' %}
{% endif %}

<div class="list-block py-6 px-8 {% if type == 'dark' %} bg-gray-100 {% else %} bg-white {% endif %} border border-solid border-azure rounded-md [&_h2]:mt-0">
  {% include context with {
    size: 'xsmall',
    subheading: subheading,
    heading: heading,
    paragraph: paragraph,
    buttons: {
      items: buttons,
    },
  } %}
</div>