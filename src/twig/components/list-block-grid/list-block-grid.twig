{% if in_component_library %}
  {% set listBlock = '@list-block' %}
{% else %}
  {% set listBlock = 'list-block.twig' %}
{% endif %}

<div class="list-block-grid grid grid-cols-12 gap-10 max-w-screen-2xl w-full my-0 mx-auto">
  {% for item in items %}
    <div class="list-block-grid__item col-span-12 {% if columns == 4 %}md:col-span-3{% elseif columns == 3 %}md:col-span-4{% else %}md:col-span-6{% endif %} md:[&>.list-block]:h-full">
      {% include listBlock with item %}
    </div>
  {% endfor %}
</div>