{% set mappedPosts = past_events|sort((a, b) => date(a.event_end_date) <= date(b.event_date))|map(p => {
    post: p,
  }) %}

{% include 'context-section.twig' with {
  hero: true,
  size: 'large',
  heading: 'Past Events',
  align: 'center',
} %}
{% include 'article-grid.twig' with {
  render_posts: false,
  render_api: false,
  columns: 3,
  image_orientation: 'rectangle',
  items: mappedPosts,
} %}

